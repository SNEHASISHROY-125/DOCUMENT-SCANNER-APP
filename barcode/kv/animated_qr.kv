#kv/animated_qr

MDBoxLayout:
	orientation: 'vertical'
	padding: [10,10,10,10]
	spacing: dp(11)
	adaptive_height: True  # This ensures dynamic height adjustment
	# md_bg_color: .4, .3, .9, 1
	spacing: dp(30)
	

	Image:
		source: "assets/image_placeholder.png"	# https://www.freepik.com/free-psd/3d-rendering-interface-tool-icon_249204529.htm#fromView=search&page=2&position=29&uuid=ea47395d-4b38-48cf-8158-512d84081169&query=image+placeholder
		anim_delay: 0.1
		size_hint: None, None
		size: dp(200), dp(200)
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		allow_stretch: True
		keep_ratio: False
	MDLabel:
		text: "Animated QR Codes are bassed on GIFs\nBut they are not supported by all QR Code Readers"
		halign: 'center'
		theme_text_color: 'Primary'
		font_size: '11sp'