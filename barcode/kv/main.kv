# kv/main.kv
#:import Factory kivy.factory.Factory



<AdvancedQRScreen@Screen>:
    name: 'advanced_qr'

    MDIconButton:
        icon: "chevron-left"
        icon_size: "48sp"
        pos_hint: {"center_x": 0.1, "center_y": 0.87}
        on_release: 
            app.root.transition.direction = 'right'
            app.root.current = 'home'
            # hide ads
            app._hide_baner()
        # md_bg_color: 1, 1, 0, 1
    AsyncImage:
        id : fit
        source: app.fit_display_source
        size_hint: None, None
        size: "200dp", "200dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.757}
        
        canvas.after:
            Color:
                rgba: [1, 0, 0, 1]
            Line:
                rectangle: fit.x, fit.y, fit.width, fit.height
                width: dp(2)
            Color:
                id: color
                rgba: [1, 0, 0, 1] if app.show_line else [1, 0, 0, 0]
            Line:
                points: [fit.x , fit.y ,fit.x, fit.y - 50, fit.right, fit.y - 50 , fit.right, fit.y]
                width: dp(1)
                
                
        on_touch_down: print(fit.x, fit.y)  

    # FitImage:
    #     source: "favicons/facebook.png"
    #     size_hint: None, None
    #     size: "50dp", "50dp"
    #     pos_hint: {"center_x": 0.5, "center_y": 0.76}

    MDIcon:
        icon: icon_field.text if Icon_switch.active else ""
        pos_hint: {"center_x": 0.5, "center_y": 0.76}
        theme_text_color: "Custom"
        text_color: app.icon_brush_color
        # size_hint: None, None
        font_size: "50dp"

        canvas.before:
            Color:
                rgba: 1, 1, 1, .96
            Rectangle:
                size: self.texture_size[0] * 0.9, self.texture_size[1] * 0.9
                pos: self.pos

    MDCard:
        size_hint: 1 ,None
        height: "60dp"
        pos_hint: {"top": 1}
        radius: [0, 0, 0, 0]
        # AsyncImage:
        #     source: "assets/qr_code_20210919123456.png"
        MDLabel:
            text: "" #"Ads here"
            halign: "center"
    
        
    # MDTopAppBar:
    #     id: top_app_bar
    #     title: "Generate Advanced QR"
    #     pos_hint: {"top": 1}
    #     md_bg_color: app.theme_cls.primary_color  # Set the transparency by adjusting the alpha value (last value)
    #     left_action_items: [["arrow-left", lambda x: (setattr(app.root, 'current', 'home'), setattr(app.theme_cls, 'primary_palette', 'Teal'),app.set_bars_colors())]]

    MDFloatLayout:
        
        MDLabel:
            id : footer
            text: 'footer text' if footer_field.text == '' else footer_field.text
            theme_text_color: "Custom"
            text_color: app.footer_brush_color
            halign: 'center'
            opacity: 0.0 if not footer_switch.active else 1.0
            x: fit.center_x - self.width/2
            y: fit.y - 50
            size_hint: None, None
            size: dp(180), dp(20)
        

        MDCard:
            id: text_input_card
            # canvas.before:
            #     Color:
            #         rgba: 1, 0, 0, 1
            #     Line:
            #         points: self.width, self.top , self.x +30, self.top
            #         width: dp(2)
            padding: "10dp"
            size_hint: .94 ,None
            height: "350dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.33}
            # elevation: 10
            md_bg_color: rgba(102, 76, 229)  #.4, .3, .9, 1

            ScrollView:
                do_scroll_y: True
                size_hint_y: None
                height: dp(330)
                md_bg_color: 1,1,1,0
                MDBoxLayout:
                    orientation: "vertical"
                    # padding: [dp(10), 0, dp(10), 0]
                    spacing: "10dp"
                    size_hint_y: None
                    height: self.minimum_height
                    # adaptive_height: True  # This ensures dynamic height adjustment

                    MDLabel:
                        text: ""
                        size_hint_x: 0.07
                        halign: "left"

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True  # This ensures dynamic height adjustment
                        md_bg_color: .4, .3, .9, 1
                        MDTextField:
                            id: qr_data_field
                            text: ""
                            hint_text: "QR code data"
                            helper_text: "Enter QR code Data"
                            helper_text_mode: "persistent"
                            size_hint_x: 0.97
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            mode: "round"
                            icon_right: "qrcode"
                            max_text_length: 150
                            # required: False

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.97
                        # size_hint_y: None
                        # height: self.minimum_height
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        padding: [0, 20, 0, 0]
                        adaptive_height: True  # This ensures dynamic height adjustment
                       
                        md_bg_color: 0, 1, .4, 0

                        MDLabel:
                            text: "  Awesome Animated QR ?"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            size_hint_x: 0.8
                            halign: "left"
                        MDLabel:
                            text: ""
                            size_hint_x: 0.07
                            halign: "left"
                        MDCheckbox:
                            id: Awesome_switch
                            group: "micro"
                            size_hint_x: 0.2
                            # pos_hint: {"center_y": 0.33} 
                            on_active: 
                                Micro_switch.active = False 
                                Micro_switch.disabled =  Awesome_switch.active

                                Icon_switch.disabled = Awesome_switch.active 
                                Icon_switch.active = not Awesome_switch.active if Icon_switch.active else Icon_switch.active
                                Icon_brush.disabled = Awesome_switch.active

                            
                        # MDLabel:
                        #     text: ""
                        #     size_hint_x: 0.23
                        #     halign: "left"
                        MDIconButton:
                            id: info
                            icon: "information"
                            on_release: app.show_info_animated()
                    MDBoxLayout:
                        # orientation: 'vertical'
                        adaptive_height: True  # This ensures dynamic height adjustment
                        md_bg_color: .4, .3, .9, 1
                        # MDLabel:
                        #     text: ""
                        #     size_hint_x: 0.023
                        #     halign: "left"
                        MDTextField:
                            id: url_field
                            text: ""
                            hint_text: "Enter hosted file URL"
                            helper_text: "should be direct link to file"
                            helper_text_mode: "persistent"
                            # size_hint_x: 0.7
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            mode: "round"
                            icon_right: "file"
                            disabled: True if not  Awesome_switch.active else False
                            max_text_length: 150
                            # required: False
                        MDIconButton:
                            id: web_sync
                            icon: "web-sync"
                            disabled: True if not Awesome_switch.active else False
                            on_release: 
                                file_picker_card.disabled =  True
                                self.disabled = True
                                generate_qr_btn.disabled = True
                                app._verify_and_fetch_from_url(url_field.text)
                            # canvas.after:
                        
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.97
                        size_hint_y: None
                        height: self.minimum_height
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        padding: [0, 30, 0, 0]
                        spacing: "10dp"
                        md_bg_color: 0, 1, .4, 0
                        MDLabel:
                            text: "OR Pick A File"
                            font_size: "15sp"
                            bold: True
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            size_hint_x: 0.8 
                            halign: "center"
                        MDCard:
                            id: file_picker_card
                            size_hint: 1 ,None
                            height: "200dp"
                            pos_hint: {"top": 1}
                            radius: [0, 0, 0, 10]
                            md_bg_color: 0, 1, .4, 0
                            disabled: True if not Awesome_switch.active else False
                            on_release: app.Pick_A_File()
                            AsyncImage:
                                source: "assets/upload.png"

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.97
                        size_hint_y: None
                        height: self.minimum_height
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                       
                        md_bg_color: 0, 1, .4, 0

                        MDLabel:
                            text: "  Micro QR"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            size_hint_x: 0.8
                            halign: "left"

                        MDSwitch:
                            id: Micro_switch
                            size_hint_x: 0.4
                            pos_hint: {"center_y": 0.33} 
                            on_active: 
                                Icon_switch.disabled = Micro_switch.active 
                                Icon_switch.active = not Micro_switch.active if Icon_switch.active else Icon_switch.active
                                qr_data_field.max_text_length = 10 if Micro_switch.active else 150
                                Icon_brush.disabled = Micro_switch.active

                            
                        MDLabel:
                            text: ""
                            size_hint_x: 0.23
                            halign: "left"
                        MDIconButton:
                            id: info
                            icon: "information"
                            on_release: app.show_info_micro()

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.97
                        size_hint_y: None
                        height: self.minimum_height
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                       
                        md_bg_color: 0, 1, .4, 0

                        MDLabel:
                            text: "  Add Icon to QR"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color
                            size_hint_x: 0.8
                            halign: "left"

                        MDSwitch:
                            id: Icon_switch
                            size_hint_x: 0.4
                            pos_hint: {"center_y": 0.33} 
                            disabled: False
                            on_active: icon_field.disabled = not icon_field.disabled


                        MDLabel:
                            text: ""
                            size_hint_x: 0.23
                            halign: "left"
                        MDIconButton:
                            id: Icon_brush
                            color: 0,1, 0, 1
                            icon: "brush"
                            on_release: app.open_color_picker(set_color_to='icon_brush_color')
                            disabled: False
                            canvas.after:
                                Color:
                                    rgba: app.icon_brush_color
                                Ellipse:
                                    pos: Icon_brush.right - Icon_brush.size[0] * 0.4, Icon_brush.center_y - Icon_brush.size[1] * 0.2
                                    size: Icon_brush.size[0] * 0.2 ,Icon_brush.size[1] * 0.2

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True  # This ensures dynamic height adjustment
                        md_bg_color: .4, .3, .9, 1
                        MDTextField:
                            id: icon_field
                            text: "facebook" if Icon_switch.active else ""
                            hint_text: "any social media icon" 
                            helper_text: "Icon be centered of QR code"
                            helper_text_mode: "on_focus"
                            max_text_length: 24
                            size_hint_x: 0.97
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            mode: "round"
                            # radius: [20, 20, 20, 20]
                            icon_right: "facebook" if self.text == '' else self.text
                            disabled: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: 0.97
                        size_hint_y: None
                        height: self.minimum_height
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        padding: [0, 20, 0, 0]
                       
                        md_bg_color: 0, 1, .4, 0

                        MDLabel:
                            text: "  Add Footer text"
                            theme_text_color: "Custom"
                            
                            text_color: app.theme_cls.primary_color
                            size_hint_x: 0.8
                            halign: "left"

                        MDSwitch:
                            id: footer_switch
                            size_hint_x: 0.4
                            pos_hint: {"center_y": 0.33} 
                            on_active: 
                                footer_field.disabled = not footer_field.disabled
                                app.show_line = footer_switch.active
                            
                                
                        MDLabel:
                            text: ""
                            size_hint_x: 0.23
                            halign: "left"
                        MDIconButton:
                            id: footer_brush
                            icon: "brush"
                            on_release: app.open_color_picker(set_color_to='footer_brush_color')
                            canvas.after:
                                Color:
                                    rgba: app.footer_brush_color
                                Ellipse:
                                    pos: footer_brush.right - footer_brush.size[0] * 0.4, footer_brush.center_y - footer_brush.size[1] * 0.2
                                    size: footer_brush.size[0] * 0.2 ,footer_brush.size[1] * 0.2
                    
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True  # This ensures dynamic height adjustment
                        md_bg_color: .4, .3, .9, 1
                        MDTextField:
                            id: footer_field
                            text: app.qr_code_description  if footer_switch.active else ""
                            hint_text: "Footer Text"
                            helper_text: "footer-line for QR code"
                            helper_text_mode: "on_focus"
                            max_text_length: 22
                            on_text: self.text = self.text[:self.max_text_length]
                            size_hint_x: 0.97
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}
                            mode: "round"
                            icon_right: "text-box"
                            disabled: True

                    MDLabel:
                        text: ""
                        size_hint_y: None
                        height: dp(300)

        MDIconButton:
            icon: "auto-fix"
            id: generate_qr_btn
            # pos_hint: {"center_x": 0.92,None}
            x: text_input_card.width - self.width * 1.2
            y: text_input_card.top
            md_bg_color: rgba(11, 41, 113)  #0, .3, 1, .4  
            disabled: app.gen_btn
            opacity: 0.4 if generate_qr_btn_spinner.active else 1.0
            on_release: 
                app.qr_code_data = qr_data_field.text
                app.qr_code_icon = icon_field.text
                app.qr_code_description = footer_field.text
                app.qr_code_micro = Micro_switch.active
                app.generate_qr_code_icon() if not Awesome_switch.active else app.generate_animated_qr_code()
            canvas.before:
                Color:
                    rgba: 18/255, 18/255, 18/255,1 #app.theme_cls.bg_dark
                Line:
                    circle: (self.center_x, self.center_y, self.width * 0.6)
                    width: dp(4.5)
        MDSpinner:
            id: generate_qr_btn_spinner
            size_hint: None, None
            size: dp(46), dp(46)
            # pos_hint: {"center_x": 0.92, "center_y": 0.07}
            x: text_input_card.width - self.width * 1.2
            y: text_input_card.top
            active: True if generate_qr_btn.disabled else False
            # color: rgba(255, 165, 0)  # Orange color
            # md_bg_color: 1, 1, 0, 1
                    
        MDCard:
            
            padding: [dp(10), 0, dp(10), 0]
            size_hint: .94 ,None
            height: "70dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.05}
            # elevation: 10
            md_bg_color: rgba(102, 76, 229)  #.4, .3, .9, 1

            ScrollView:
                do_scroll_x: True
                do_scroll_y: False
                size_hint_y: None
                height: dp(70)
                # md_bg_color: 1,1,1,0

                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: [dp(10), 0, dp(10), 0]
                    spacing: "10dp"
                    size_hint_x: None
                    width: self.minimum_width

                    SelectableImage:
