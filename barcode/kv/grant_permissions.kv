#kv/grant_permissions.kv

MDBoxLayout:
	orientation: 'vertical'
	padding: [10,10,10,30]
	spacing: dp(11)
	adaptive_height: True  # This ensures dynamic height adjustment
	# md_bg_color: .4, .3, .9, 1
	spacing: dp(30)
	

	Image:
		source: "assets/grant_permissions.png"
		anim_delay: 0.1
		size_hint: None, None
		size: dp(200), dp(200)
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		allow_stretch: True
		keep_ratio: False
	MDLabel:
		text: "Please Grant Permissions to access your files, these are needed to pick images for QR Code generation like logos,background image, etc."
		halign: 'center'
		theme_text_color: 'Primary'
		font_size: '11sp'