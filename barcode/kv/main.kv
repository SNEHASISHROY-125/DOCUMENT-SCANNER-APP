<AdvancedQRScreen@Screen>:
    name: 'advanced_qr'
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_dark
        Rectangle:
            size: self.size
            pos: self.pos

    MDIconButton:
        icon: "chevron-left"
        icon_size: "48sp"
        pos_hint: {"center_x": 0.1, "center_y": 0.87}
        on_release: 
            app.root.transition.direction = 'right'
            # app.root.current = 'home'
            app._transition_to('home',t=0.3)
            # hide ads
            app._hide_baner()
        # md_bg_color: 1, 1, 0, 1
    AsyncImage:
        id : fit
        source: app.fit_display_source
        size_hint: None, None
        size: "200dp", "200dp"
        # size: root.size[1] * 0.3, root.size[1] * 0.3
        pos_hint: {"center_x": 0.5, "center_y": 0.757}
        
        canvas.after:
            Color:
                rgba: [1, 0, 0, 1]
            Line:
                rectangle: fit.x, fit.y, fit.width, fit.height
                width: dp(2)
            Color:
                id: color
                rgba: [1, 0, 0, 1] if app.show_line else [1, 0, 0, 0]
            Line:
                points: [fit.x , fit.y ,fit.x, fit.y - 50, fit.right, fit.y - 50 , fit.right, fit.y]
                width: dp(1)
                
                
        on_touch_down: print(fit.x, fit.y)  

    QRWidget:
        id: qr_widget
        size_hint: None, None
        size: "200dp", "200dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.757}
        dark_color: app.qr_bg_dark_color
        light_color: app.qr_bg_light_color
    
