# kv/watchAd.kv

# <WatchAd@Screen>:
# 	name: 'watchAd'

MDBoxLayout:
	orientation: "vertical"
	padding: [10,10,10,30]
	adaptive_height: True
	md_bg_color: 1,.3,0,.5

	MDLabel:
		text: "Watch Ad for Free Credits"
		font_style: "H5"
		halign: "center"
		theme_text_color: "Primary"
		size_hint_y: None
		height: self.texture_size[1]
		md_bg_color: 1,.3,0,1

	MDBoxLayout:
		md_bg_color: 0,.3,0,.5
		size_hint_y: None
		height: dp(120)
		padding: [dp(20),0,0,0]
		# height: self.minimum_height
		MDIcon:
			icon: "movie-open-play"
			font_size: "80sp"
			pos_hint: {"center_y": .5}

			md_bg_color: 1,.3,0,1

		MDLabel:
			text: " "
			size_hint_x: None
			width: dp(30)

		MDFlatButton:
			id: watch_ad_btn
			text: "Watch Ad\n+ 10 Credits"
			theme_text_color: "Custom"
			text_color: 1, 1, 0, 1
			md_bg_color: 0, 0, 1, .2
			pos_hint: {"center_y": .5}
			font_size: "20sp"
			on_release: app._show_rewarded_ad()
		
		FloatLayout:
			
			MDSpinner:
				id: watch_ad_spinner
				opacity: 0.47
				color: 0.15, 0.35, 0.8, 0.35
				size_hint_x: None
				width: dp(50)
				active:  not app.ad_loaded
				x: watch_ad_btn.x + dp(watch_ad_btn.width * 0.3)
				y: watch_ad_btn.y - dp(watch_ad_btn.height * 0.45)

