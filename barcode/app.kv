ScreenManager:
    HomeScreen:
    SettingsScreen:

<HomeScreen>:
    name: 'home'
    FitImage:
        source: 'https://images.pexels.com/photos/4544747/pexels-photo-4544747.jpeg?cs=srgb&dl=pexels-leeloothefirst-4544747.jpg&fm=jpg'
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: top_app_bar
            title: "Create Barcode, QR Code, and Scan Documents"
            pos_hint: {"top": 1}
            # right_action_items: [["dots-vertical", lambda x: app.refresh_files()]]
            md_bg_color: 1, 1, 1, 0.2  # Set the transparency by adjusting the alpha value (last value)

        MDBottomNavigation:
            id: bottom_nav
            on_switch_tabs: app.on_tab_switch(*args)

            MDBottomNavigationItem:
                name: 'home_tab'
                text: "home"
                icon: "home"
                badge_icon: ""
                icon_color: app.theme_cls.primary_color
                FitImage:
                    source: 'https://images.pexels.com/photos/4544747/pexels-photo-4544747.jpeg?cs=srgb&dl=pexels-leeloothefirst-4544747.jpg&fm=jpg'

                CustomRecycleView:
                    id: rv

                MDFloatingActionButton:
                    icon: "plus"
                    md_bg_color: app.theme_cls.primary_color
                    pos_hint: {'center_x': 0.7, 'center_y': 0.1}
                    on_release: app.generate_codes()
        
            MDBottomNavigationItem:
                name: 'scaner_tab'
                text: "Document"
                icon: "camera-iris"
                badge_icon: ""
                icon_color: app.theme_cls.primary_color
                Screen:
                    name: 'doc_scaner'
                    MDLabel:
                        text: 'Document Scaner Screen'
                        halign: 'center'
        
            MDBottomNavigationItem:
                name: 'scaner_tab'
                text: "scaner"
                icon: "line-scan"
                badge_icon: ""
                icon_color: app.theme_cls.primary_color
                Screen:
                    name: 'scaner'
                    MDLabel:
                        text: 'Scaner Screen'
                        halign: 'center'
                    MDRaisedButton:
                        text: 'Back to Menu'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                        on_release: app.root.current = 'menu'

            

<CustomCard>:
    orientation: "vertical"
    size_hint_y: None
    height: self.minimum_height
    padding: dp(10)
    md_bg_color: 1, 1, 1, 1
    radius: [dp(10)]
    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(10)
    
        Image:
            id: image
            source: root.image_source
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            height: self.width * 0.4  # Adjust this multiplier to control image height relative to width
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: self.minimum_width

            MDIconButton:
                icon: "share-circle"
                text: "Share"
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                on_release: app.root.current = 'settings'
            MDIconButton:
                icon: "delete-variant"
                text: "Delete"
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1
                on_release: app.delete_file(root.ids.image.source)

            MDLabel:
                text: ''
                theme_text_color: "Primary"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"
                font_style: "H6"
                theme_text_color: "Primary"
                text_color: 0, 0, 0, 1

<CustomRecycleView>:

    viewclass: 'CustomCard'
    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        

<SettingsScreen>:
    name: 'settings'
    MDLabel:
        text: 'Settings Screen'
        halign: 'center'
    MDRaisedButton:
        text: 'Back to Menu'
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_release: app.root.current = 'menu'