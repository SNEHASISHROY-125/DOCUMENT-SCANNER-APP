<SelectableImage@MDCard>:
    color_code: 1, 1, 1
    size_hint: None, None
    size: "60dp", "60dp"
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    md_bg_color: 1, 1, 1, .3
    ripple_behavior: True
    on_release: self.selected = not self.selected

    selected: False
    source: ""

    canvas.after:

        Color:
            rgba: (1, 1, 1, 1) if self.selected else (1, 1, 1, 0)  # Blue color for ellipse
        Ellipse:
            pos: self.right - dp(23) , self.top * 0.67
            size: self.size[0] * 0.4 , self.size[1] * 0.4
        
        Color:
            rgba: (0, 1, 0, 1) if self.selected else (1, 1, 1, 0)
        Line:

            # points: [self.x + 10, self.center_y, self.center_x, self.y + 10, self.right, self.top]
            points: [self.right -dp(16) , self.top * 0.87, self.right - dp(12), self.top * 0.8, self.right - dp(6), self.top * 0.95]
            width: dp(1)

    FitImage:
        source: root.source
        size_hint: None, None
        size: "60dp", "60dp"

