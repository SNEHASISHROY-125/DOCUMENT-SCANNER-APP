            id: bottom_nav
            on_switch_tabs: app.on_tab_switch(*args)
            panel_color:  rgba("#212121")

            MDBottomNavigationItem:
                name: 'home_tab'
                text: "home"
                icon: "home"
                badge_icon: ""
                icon_color: [0.15, 0.35, 0.8, 0.35]
                
                CustomRecycleView:
